@model IEnumerable<ShoppingListApp.Models.ShoppingList>

<br>
<div class="container">
    <h3>Shopping List</h3>
</div>

<div class="container" id="page1">
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thread>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ShoppingListId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>
                            @Html.ActionLink("Remove", "Remove",
                            new { id = item.ShoppingListId },
                            new { @class = "btn btn-xs btn-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

